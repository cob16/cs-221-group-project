<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rpsrec_proto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/Orange" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BlankRecord"
            android:label="@string/title_activity_blank_record" >
        </activity>
        <activity
            android:name=".NewRecord"
            android:label="@string/title_activity_new_record"
            android:parentActivityName=".BlankRecord" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rpsrec_proto.BlankRecord" />
        </activity>
        <activity
            android:name=".UserDataView"
            android:label="@string/title_activity_user_data_view" >
        </activity>
        <activity
            android:name=".RecordView"
            android:label="@string/title_activity_record_view" >
        </activity>
        <activity
            android:name=".TempRecordView"
            android:label="@string/title_activity_record_view" >
        </activity>
        <activity
            android:name=".Fragment_test"
            android:label="@string/title_activity_fragment_test" >
        </activity>
        <activity
            android:name=".MainView"
            android:label="@string/title_activity_fragment_test" >
        </activity>
    </application>
<uses-permission android:name="android.permission.INTERNET" /> 
</manifest>